<table>

  <tbody> <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "Edit", edit_post_path(post), :remote => true %></td>
      <td><%= link_to 'Destroy', post,    :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </tbody>

</table>

